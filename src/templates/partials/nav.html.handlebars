<nav class="black amber-text">
  <div class="container">
    {{#if currentCity.show}}
      {{#if currentCity.isFlying}}
        <div class="right">
          <span class="chip amber black-text">Dave is currently flying to {{currentCity.name}}</span>
        </div>
      {{else}}
      <div class="right">
        <span class="chip amber black-text">Dave is currently in {{currentCity.name}}</span>
      </div>
      {{/if}}
    {{/if}}
    <ul id="slide-out" class="side-nav black amber-text">
      <li class="no-hover">
        <a href="/about" class="block-me">
          <img class="responsive-img circle side-nav-face" src="/img/face.jpg" />
        </a>
      </li>
      {{#each navItems}}
        <li>
          <a href="{{this.href}}" class="nav-item-link amber-text">{{this.displayName}}</a>
        </li>
      {{/each}}
    </ul>
    <a href="#" data-activates="slide-out" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
  </div>
</nav>
